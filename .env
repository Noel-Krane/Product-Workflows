# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database
DATABASE_URL=sqlite:///./ai_research_platform.db

# OpenRouter API (for LLM access)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LangSmith (for observability and tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=ai-research-platform

# Research APIs (choose one or multiple)
# Perplexity API for deep research
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Alternative: OpenAI for research (if using GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Anthropic (if using Claude directly)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cost Control
API_BUDGET_SOFT_CAP=50.0
API_BUDGET_HARD_CAP=100.0

# Model Preferences
DEFAULT_RESEARCH_MODEL=anthropic/claude-3.5-sonnet
DEFAULT_ANALYSIS_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_MODEL=openai/gpt-4o-mini

# WebSocket Settings (for real-time dashboard)
WEBSOCKET_PORT=8001

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
REQUESTS_PER_MINUTE=30
TOKENS_PER_MINUTE=100000

# Research Settings
MAX_RESEARCH_DEPTH=3
MAX_SOURCES_PER_QUERY=10
CITATION_REQUIRED=true

# Security (generate secure values for production)
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Optional: Deployment specific
# RENDER_EXTERNAL_URL=https://your-app.onrender.com
# RAILWAY_STATIC_URL=https://your-app.railway.app